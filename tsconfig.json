{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
    "include": [
        "src/*"
    ],
    "compilerOptions": {
        "lib": [
            "es2022",
            "DOM"
        ],
        "baseUrl": ".",
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    }
}